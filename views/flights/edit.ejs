<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Flight</title>
</head>
<body>

 <%- include('../partials/navbar') %>

  <h1>Edit Flight</h1>

  <form action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label>Airline Name:</label>
    <input type="text" name="airlineName" value="<%= flight.airlineName %>" required>

    <label>Origin:</label>
    <input type="text" name="origin" value="<%= flight.origin %>" required>

    <label>Destination:</label>
    <input type="text" name="destination" value="<%= flight.destination %>" required>

    <label>Take Off Date:</label>
    <input type="date" name="takeOffDate" value="<%= flight.takeOffDate.toISOString().split('T')[0] %>" required>

    <label>Trip Type:</label>
    <select name="tripType">
      <option value="one-way" <%= flight.tripType === 'one-way' ? 'selected' : '' %>>One-way</option>
      <option value="round-trip" <%= flight.tripType === 'round-trip' ? 'selected' : '' %>>Round-trip</option>
    </select>

    <label>Return Date:</label>
    <input type="date" name="returnDate" value="<%= flight.returnDate ? flight.returnDate.toISOString().split('T')[0] : '' %>">

    <h3>Passengers</h3>
    <label>Adults:</label>
    <input type="number" name="passengers[adults]" value="<%= flight.passengers.adults %>" min="1">

    <label>Kids:</label>
    <input type="number" name="passengers[kids]" value="<%= flight.passengers.kids %>" min="0">

    <button type="submit">Update Flight</button>
  </form>



</body>
</html>